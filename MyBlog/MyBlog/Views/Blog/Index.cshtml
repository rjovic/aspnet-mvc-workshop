@model IEnumerable<MyBlog.Models.Post>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", "Post")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CreatedOn)
        </td>
        <td>
            @if(User.Identity.IsAuthenticated)
            {
                @Html.ActionLink("Edit", "Edit", "Post", new {id = item.Id}, null)
            } |

            @Html.ActionLink("Details", "Details", "Post", new { id=item.Id }, null) |

            @if(User.Identity.IsAuthenticated)
            {
                @Html.ActionLink("Delete", "Delete", "Post", new {id = item.Id}, null)
            }
        </td>
    </tr>
}

</table>
